<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <SourceGeneratorTargetFramework>netstandard2.0</SourceGeneratorTargetFramework>
    <Nullable>enable</Nullable>
    <RepositoryUrl>https://github.com/Junjinjen/LightValidation</RepositoryUrl>
    <Copyright>Copyright (c) Alexander Kravchenko 2024</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Junjinjen</Authors>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\LightValidation.SourceGenerator\LightValidation.SourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    <None Include="..\LightValidation.SourceGenerator\bin\$(Configuration)\$(SourceGeneratorTargetFramework)\LightValidation.SourceGenerator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="$(AssemblyName).UnitTests" />
  </ItemGroup>

</Project>
